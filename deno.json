{
  "tasks": {
    "insert": "deno run --allow-read --allow-write --allow-net --allow-env scripts/insert-tutorial.ts",
    "upload": "deno run --allow-read --allow-net --allow-env scripts/upload-tutorials.ts",
    "dump": "deno run --allow-write --allow-net --allow-env scripts/dump-local-tutorials.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^0.224.3",
    "js-yaml": "npm:js-yaml@^4.1.0",
    "marked": "npm:marked@^12.0.0"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-unused-vars",
        "no-explicit-any"
      ]
    }
  }
}
